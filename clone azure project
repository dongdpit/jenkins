	// git repository info
	def gitRepository = 'http://10.26.7.107/azure-test/_git/nodejs-demo'
	def gitBranch = 'main'

	// gitlab credentials
	def gitlabCredential = 'azure-acc'	

	pipeline {
		agent any
		
		stages {		
			stage('Checkout project') 
			{
			  steps 
			  {
				echo "checkout project"
				git branch: gitBranch,
				   credentialsId: gitlabCredential,
				   url: gitRepository
				sh "git reset --hard"				
			  }
			}
		}
	}
